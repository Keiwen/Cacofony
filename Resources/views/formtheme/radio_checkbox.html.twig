{% use "form_div_layout.html.twig" %}

{% block checkbox_toggle_widget %}
    <input type="checkbox" {{ block('widget_attributes') }}
            {% if value is defined %} value="{{ value }}"{% endif %}
            {% if checked %} checked="checked"{% endif %}
            data-toggle="toggle"
           data-on="{{ translation_domain is same as(false) ? label_on : label_on|trans({}, translation_domain) }}"
           data-off="{{ translation_domain is same as(false) ? label_off : label_off|trans({}, translation_domain) }}"
           data-onstyle="{{ style_on }}" data-offstyle="{{ style_off }}"
            {% if style is defined %} data-style="{{ style}}"{% endif %}
    />
{% endblock %}


